{
  "name": "sufe-cs-conf-ddl",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "npm run lint -- --fix && vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@chenfengyuan/vue-countdown": "^1.1.5",
    "core-js": "^3.8.3",
    "element-ui": "^2.15.6",
    "js-yaml": "^4.1.0",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.34",
    "vue": "^2.6.14",
    "vue-ls": "^4.1.0",
    "vue-resource": "^1.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "^4.5.15",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-vue": "^8.0.3",
    "eslint-plugin-vuejs-accessibility": "^1.1.0",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^4.46.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "linebreak-style": [
        0,
        "error",
        "windows"
      ],
      "vue/no-unused-components": 0,
      "no-shadow": 0,
      "eqeqeq": 0,
      "treatUndefinedAsUnspecified": 0,
      "vue/multi-word-component-names": 0,
      "no-nested-ternary":0,
      "max-len": [
        "error",
        {
          "code": 300
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_place",
            "_isMobile"
          ]
        }
      ],
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ],
      "no-param-reassign": ["error", {"props": true, "ignorePropertyModificationsFor": ["props","record" ]}]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "gitHooks": {
    "pre-commit": "scripts/pre-commit"
  }
}
